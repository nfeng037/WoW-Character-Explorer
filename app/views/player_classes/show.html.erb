<!-- Header -->
<%= render 'layouts/header' %>

<!-- Hero Section -->
<div class="container mx-auto my-10 p-10 bg-white rounded shadow-lg">
  <div class="lg:flex rounded-xl p-8 lg:p-0 ">
    <div class="pt-6 lg:p-8 text-center lg:text-left space-y-4">
      <div>
        <img class="lg:w-20 lg:h-auto lg:rounded-none rounded-full mx-auto" src="<%= @player_class.media_url %>" alt="<%= @player_class.name %>" width="100" height="100">

        <h1 class="text-3xl font-bold p-5 text-center"><%= @player_class.name %></h1>
        <p>
          <b>ID: </b> <%= @player_class.id %>
        </p>
        <p>
          <b>Power Type: </b> <%= @player_class.power_type %>
        </p>
        <div class="flex">
          <h2 class="text-xl font-bold">Specializations:</h2>
          <ul class="flex p-1">
            <% @player_class.specializations.each do |specialization| %>
              <li class="mx-1">
                <a href="/specialization/<%= specialization.id %>" class="text-indigo-600 hover:text-indigo-900 hover:underline">
                  <%= specialization.name %>
                </a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="font-medium">
        <div>
          <h2 class="text-purple-500">
            Races that can choose this class
          </h2>
          <ul class="flex flex-wrap gap-8">
            <% @player_class.races.each do |race| %>
              <li>
                <a
                  href="/races/<%= race.id %>"
                  title="<%= race.name %>"
                >
                  <img
                    alt="<%= race.name %>"
                    src="<%= race.media_url %>"
                    class="transform transition duration-500 hover:scale-150 lg:w-10 lg:h-auto rounded-full mx-auto"
                    title="<%= race.name %>"
                  >
                </a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Footer -->
<%= render 'layouts/footer' %>
